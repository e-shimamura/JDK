#!/usr/bin/env bash
################################################################################
# bin/compile <build-dir> <cache-dir>                                          #
################################################################################

# ---------------------------------------------------------------------------- #
# 変数を設定                                                                   #
# ---------------------------------------------------------------------------- #
BIN_DIR=$(dirname $0)
BUILDPACK_DIR=`cd $(dirname $0); cd ..; pwd`
BUILD_DIR=$1
CACHE_DIR=$2

cd $BUILD_DIR
pwd
ls -la

cd $BUILDPACK_DIR
pwd
ls -la

#compile_jdk="$BUILDPACK_DIR/download/jdk1.8.0-71_1.8.071-1_amd64.deb"

#dpkg -i $compile_jdk

#export JAVA_HOME=/usr/java/latest

#. /etc/profile


# ---------------------------------------------------------------------------- #
# キャッシュディレクトリをクリア                                               #
# ---------------------------------------------------------------------------- #
rm -rf $CACHE_DIR
